<form id="form_variable">

    {% for variable in variables %}
        <form>
            <input type="hidden" name="name" value="{{ variable.name }}">
            {{ variable.name_translate }}: <input name="value" type="text" value="{{ variable.value }}" onkeyup="sendform(this, 'save_variables', {data:{}, form: document.getElementById('form_variable'), url:mod_settings.url_api});"><br>
        </form>
    {% endfor %}

</form>

