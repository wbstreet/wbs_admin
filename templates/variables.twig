{% for variable in variables %}
    <form>
        <input type="hidden" name="name" value="{{ variable.name }}">
        {{ variable.name_translate }}:
        {% if variable.field_type == "input" %}
            <input name="value" type="text" value="{{ variable.value }}" onkeyup="sendform(this, 'save_variables', {url:mod_settings.url_api});"><br>
        {% elseif variable.field_type == "textarea" %}
            <br><textarea cols="50" rows="15" name="value" onkeyup="sendform(this, 'save_variables', {url:mod_settings.url_api});">{{ variable.value }}</textarea>
        {% endif %}
    </form>
{% endfor %}

